@page "/"
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.


<div>
    <h4>Wähle eine Option:</h4>
    <label>
        <input type="radio" name="choice" value="Option1" @onclick="OnSelectionChanged" checked="@IsSelected("Option1")"  />
        Option 1
    </label>
    <br />
    <label>
        <input type="radio" name="choice" value="Option2" @onclick="OnSelectionChanged" checked="@IsSelected("Option2")" />
        Option 2
    </label>
    <button class="btn btn-primary" @onclick="OnSelectionChanged">Click me</button>
</div>

@code {
    private string? SelectedOption;

    private void OnSelectionChanged(EventArgs e)
    {
       // SelectedOption = e.Value?.ToString();
    }

    private bool IsSelected(string option)
    {
        return SelectedOption == option;
    }
}